<Window x:Class="BowlingScoreSheet.PlayersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowlingScoreSheet"
        mc:Ignorable="d"
        Title="PlayersDialog" Height="322.508" Width="300" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Label Content="Player:" HorizontalAlignment="Left" Margin="21,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Player" HorizontalAlignment="Left" Height="23" Margin="21,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button Name="AddPlayerButton" Content="Add" Click="AddPlayerButton_Click" HorizontalAlignment="Left" Margin="232,36,0,0" VerticalAlignment="Top" Width="42"/>
        <ListBox Name="PlayersList" HorizontalAlignment="Left" Height="111" Margin="21,73,0,0" VerticalAlignment="Top" Width="253"/>
        <Button Name="OkButton" Click="OkButton_Click" Content="OK" HorizontalAlignment="Left" Margin="232,191,0,0" VerticalAlignment="Top" Width="42" Height="22"/>
        <Button Content="Test" Click="TestButton_Click" HorizontalAlignment="Left" Margin="21,235,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
